<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <TextView
        android:id="@+id/textoContas"
        android:layout_width="380dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@+id/botao1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botao1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:onClick="operacao"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoContas" />

    <Button
        android:id="@+id/botao2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:onClick="operacao"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/botao1"
        app:layout_constraintTop_toBottomOf="@+id/textoContas" />

    <Button
        android:id="@+id/botao3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:onClick="operacao"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/botao2"
        app:layout_constraintTop_toBottomOf="@+id/textoContas" />

    <Button
        android:id="@+id/botao4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:onClick="operacao"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botao1" />

    <Button
        android:id="@+id/botao5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:onClick="operacao"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/botao4"
        app:layout_constraintTop_toBottomOf="@+id/botao2" />

    <Button
        android:id="@+id/botao6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:onClick="operacao"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/botao5"
        app:layout_constraintTop_toBottomOf="@+id/botao3" />

    <Button
        android:id="@+id/botao7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:onClick="operacao"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botao4" />

    <Button
        android:id="@+id/botao8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:onClick="operacao"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/botao7"
        app:layout_constraintTop_toBottomOf="@+id/botao5" />

    <Button
        android:id="@+id/botao9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:onClick="operacao"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/botao8"
        app:layout_constraintTop_toBottomOf="@+id/botao6" />

    <Button
        android:id="@+id/botaomais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:onClick="operacaoSoma"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botao7" />

    <Button
        android:id="@+id/botao0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:onClick="operacao"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/botaomais"
        app:layout_constraintTop_toBottomOf="@+id/botao8" />

    <Button
        android:id="@+id/botaomenos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:onClick="operacaoSubt"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/botaomult"
        app:layout_constraintTop_toBottomOf="@+id/botao0" />

    <Button
        android:id="@+id/botaomult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:onClick="operacaoMult"
        android:text="*"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaomais" />

    <Button
        android:id="@+id/botaodiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:onClick="operacaoDiv"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/botao0"
        app:layout_constraintTop_toBottomOf="@+id/botao9" />

    <Button
        android:id="@+id/botaoresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:onClick="botaoResultado"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/botaomenos"
        app:layout_constraintTop_toBottomOf="@+id/botaodiv" />

    <Button
        android:id="@+id/botaovoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="10dp"
        android:onClick="voltarComeco"
        android:text="voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaomenos" />

    <Button
        android:id="@+id/botaoac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:onClick="apagarConteudo"
        android:text="AC"
        app:layout_constraintStart_toEndOf="@+id/botaovoltar"
        app:layout_constraintTop_toBottomOf="@+id/botaoresult" />

</androidx.constraintlayout.widget.ConstraintLayout>